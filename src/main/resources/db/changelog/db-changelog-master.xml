<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <!-- Enable UUID extension -->
    <changeSet id="1" author="wallet-app">
        <sql>CREATE EXTENSION IF NOT EXISTS "pgcrypto"</sql>
        <rollback>DROP EXTENSION IF EXISTS "pgcrypto"</rollback>
    </changeSet>

    <!-- Create Users table -->
    <changeSet id="2" author="wallet-app">
        <createTable tableName="users">
            <column name="id" type="UUID" defaultValueComputed="gen_random_uuid()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password_hash" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="phone_number" type="VARCHAR(20)">
                <constraints unique="true"/>
            </column>
            <column name="status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="kyc_status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="mfa_enabled" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="mfa_secret" type="VARCHAR(32)"/>
            <column name="transaction_pin" type="VARCHAR(100)"/>
            <column name="created_at" type="TIMESTAMP(6)">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP(6)"/>
            <column name="last_login_at" type="TIMESTAMP(6)"/>
            <column name="last_login_ip" type="VARCHAR(45)"/>
            <column name="version" type="BIGINT"/>
        </createTable>
    </changeSet>

    <!-- Create indexes on users table -->
    <changeSet id="3" author="wallet-app">
        <createIndex indexName="idx_users_email" tableName="users">
            <column name="email"/>
        </createIndex>
    </changeSet>

    <changeSet id="4" author="wallet-app">
        <createIndex indexName="idx_users_phone" tableName="users">
            <column name="phone_number"/>
        </createIndex>
    </changeSet>

    <!-- Create User Roles table -->
    <changeSet id="5" author="wallet-app">
        <createTable tableName="user_roles">
            <column name="user_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="6" author="wallet-app">
        <addPrimaryKey tableName="user_roles" columnNames="user_id, role" constraintName="pk_user_roles"/>
    </changeSet>

    <changeSet id="7" author="wallet-app">
        <addForeignKeyConstraint
                baseTableName="user_roles"
                baseColumnNames="user_id"
                constraintName="fk_user_roles_user"
                referencedTableName="users"
                referencedColumnNames="id"
                onDelete="CASCADE"/>
    </changeSet>

    <!-- Create Wallets table -->
    <changeSet id="8" author="wallet-app">
        <createTable tableName="wallets">
            <column name="id" type="UUID" defaultValueComputed="gen_random_uuid()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="wallet_number" type="VARCHAR(20)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="currency" type="VARCHAR(3)">
                <constraints nullable="false"/>
            </column>
            <column name="balance" type="DECIMAL(19,4)" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
            <column name="available_balance" type="DECIMAL(19,4)" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP(6)">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP(6)"/>
            <column name="version" type="BIGINT"/>
        </createTable>
    </changeSet>

    <changeSet id="9" author="wallet-app">
        <addForeignKeyConstraint
                baseTableName="wallets"
                baseColumnNames="user_id"
                constraintName="fk_wallet_user"
                referencedTableName="users"
                referencedColumnNames="id"
                onDelete="RESTRICT"/>
    </changeSet>

    <changeSet id="10" author="wallet-app">
        <createIndex indexName="idx_wallets_user_currency" tableName="wallets">
            <column name="user_id"/>
            <column name="currency"/>
        </createIndex>
    </changeSet>

    <changeSet id="11" author="wallet-app">
        <createIndex indexName="idx_wallets_number" tableName="wallets">
            <column name="wallet_number"/>
        </createIndex>
    </changeSet>

    <!-- Create Ledger Entries table (immutable) -->
    <changeSet id="12" author="wallet-app">
        <createTable tableName="ledger_entries">
            <column name="id" type="UUID" defaultValueComputed="gen_random_uuid()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="wallet_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="entry_type" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="DECIMAL(19,4)">
                <constraints nullable="false"/>
            </column>
            <column name="balance_before" type="DECIMAL(19,4)">
                <constraints nullable="false"/>
            </column>
            <column name="balance_after" type="DECIMAL(19,4)">
                <constraints nullable="false"/>
            </column>
            <column name="transaction_reference" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="idempotency_key" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="description" type="VARCHAR(500)"/>
            <column name="external_reference" type="VARCHAR(50)"/>
            <column name="created_at" type="TIMESTAMP(6)">
                <constraints nullable="false"/>
            </column>
            <column name="ip_address" type="VARCHAR(45)"/>
        </createTable>
    </changeSet>

    <changeSet id="13" author="wallet-app">
        <addForeignKeyConstraint
                baseTableName="ledger_entries"
                baseColumnNames="wallet_id"
                constraintName="fk_ledger_wallet"
                referencedTableName="wallets"
                referencedColumnNames="id"
                onDelete="RESTRICT"/>
    </changeSet>

    <changeSet id="14" author="wallet-app">
        <createIndex indexName="idx_ledger_wallet_created" tableName="ledger_entries">
            <column name="wallet_id"/>
            <column name="created_at"/>
        </createIndex>
    </changeSet>

    <changeSet id="15" author="wallet-app">
        <createIndex indexName="idx_ledger_transaction_ref" tableName="ledger_entries">
            <column name="transaction_reference"/>
        </createIndex>
    </changeSet>

    <changeSet id="16" author="wallet-app">
        <createIndex indexName="idx_ledger_idempotency" tableName="ledger_entries">
            <column name="idempotency_key"/>
        </createIndex>
    </changeSet>

    <!-- Create Transactions table -->
    <changeSet id="17" author="wallet-app">
        <createTable tableName="transactions">
            <column name="id" type="UUID" defaultValueComputed="gen_random_uuid()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="reference" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="source_wallet_id" type="UUID"/>
            <column name="destination_wallet_id" type="UUID"/>
            <column name="type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="DECIMAL(19,4)">
                <constraints nullable="false"/>
            </column>
            <column name="fee" type="DECIMAL(19,4)" defaultValueNumeric="0"/>
            <column name="currency" type="VARCHAR(3)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(500)"/>
            <column name="failure_reason" type="VARCHAR(1000)"/>
            <column name="external_reference" type="VARCHAR(100)"/>
            <column name="payment_gateway" type="VARCHAR(50)"/>
            <column name="ip_address" type="VARCHAR(45)"/>
            <column name="user_agent" type="VARCHAR(500)"/>
            <column name="created_at" type="TIMESTAMP(6)">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP(6)"/>
            <column name="completed_at" type="TIMESTAMP(6)"/>
            <column name="version" type="BIGINT"/>
        </createTable>
    </changeSet>

    <changeSet id="18" author="wallet-app">
        <addForeignKeyConstraint
                baseTableName="transactions"
                baseColumnNames="source_wallet_id"
                constraintName="fk_tx_source_wallet"
                referencedTableName="wallets"
                referencedColumnNames="id"
                onDelete="RESTRICT"/>
    </changeSet>

    <changeSet id="19" author="wallet-app">
        <addForeignKeyConstraint
                baseTableName="transactions"
                baseColumnNames="destination_wallet_id"
                constraintName="fk_tx_dest_wallet"
                referencedTableName="wallets"
                referencedColumnNames="id"
                onDelete="RESTRICT"/>
    </changeSet>

    <changeSet id="20" author="wallet-app">
        <createIndex indexName="idx_transactions_source" tableName="transactions">
            <column name="source_wallet_id"/>
            <column name="created_at"/>
        </createIndex>
    </changeSet>

    <changeSet id="21" author="wallet-app">
        <createIndex indexName="idx_transactions_dest" tableName="transactions">
            <column name="destination_wallet_id"/>
            <column name="created_at"/>
        </createIndex>
    </changeSet>

    <changeSet id="22" author="wallet-app">
        <createIndex indexName="idx_transactions_ref" tableName="transactions">
            <column name="reference"/>
        </createIndex>
    </changeSet>

    <changeSet id="23" author="wallet-app">
        <createIndex indexName="idx_transactions_status" tableName="transactions">
            <column name="status"/>
            <column name="created_at"/>
        </createIndex>
    </changeSet>

    <!-- Create KYC Verifications table -->
    <changeSet id="24" author="wallet-app">
        <createTable tableName="kyc_verifications">
            <column name="id" type="UUID" defaultValueComputed="gen_random_uuid()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="UUID">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="level" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="full_name" type="VARCHAR(100)"/>
            <column name="id_type" type="VARCHAR(50)"/>
            <column name="id_number" type="VARCHAR(50)"/>
            <column name="date_of_birth" type="DATE"/>
            <column name="nationality" type="VARCHAR(100)"/>
            <column name="address" type="VARCHAR(500)"/>
            <column name="city" type="VARCHAR(100)"/>
            <column name="state" type="VARCHAR(100)"/>
            <column name="postal_code" type="VARCHAR(20)"/>
            <column name="country" type="VARCHAR(50)"/>
            <column name="id_document_url" type="VARCHAR(500)"/>
            <column name="proof_of_address_url" type="VARCHAR(500)"/>
            <column name="selfie_url" type="VARCHAR(500)"/>
            <column name="verification_provider" type="VARCHAR(100)"/>
            <column name="external_verification_id" type="VARCHAR(100)"/>
            <column name="verified_at" type="TIMESTAMP(6)"/>
            <column name="rejection_reason" type="VARCHAR(1000)"/>
            <column name="reviewed_by" type="UUID"/>
            <column name="reviewed_at" type="TIMESTAMP(6)"/>
            <column name="created_at" type="TIMESTAMP(6)">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP(6)"/>
        </createTable>
    </changeSet>

    <changeSet id="25" author="wallet-app">
        <addForeignKeyConstraint
                baseTableName="kyc_verifications"
                baseColumnNames="user_id"
                constraintName="fk_kyc_user"
                referencedTableName="users"
                referencedColumnNames="id"
                onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="26" author="wallet-app">
        <createIndex indexName="idx_kyc_user" tableName="kyc_verifications">
            <column name="user_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="27" author="wallet-app">
        <createIndex indexName="idx_kyc_status" tableName="kyc_verifications">
            <column name="status"/>
        </createIndex>
    </changeSet>

    <!-- Create Notifications table -->
    <changeSet id="28" author="wallet-app">
        <createTable tableName="notifications">
            <column name="id" type="UUID" defaultValueComputed="gen_random_uuid()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
            <column name="message" type="VARCHAR(1000)">
                <constraints nullable="false"/>
            </column>
            <column name="reference_id" type="VARCHAR(100)"/>
            <column name="is_read" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="read_at" type="TIMESTAMP(6)"/>
            <column name="created_at" type="TIMESTAMP(6)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="29" author="wallet-app">
        <addForeignKeyConstraint
                baseTableName="notifications"
                baseColumnNames="user_id"
                constraintName="fk_notification_user"
                referencedTableName="users"
                referencedColumnNames="id"
                onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="30" author="wallet-app">
        <createIndex indexName="idx_notification_user" tableName="notifications">
            <column name="user_id"/>
            <column name="created_at"/>
        </createIndex>
    </changeSet>

    <changeSet id="31" author="wallet-app">
        <createIndex indexName="idx_notification_read" tableName="notifications">
            <column name="is_read"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>